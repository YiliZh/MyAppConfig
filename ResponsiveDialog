import * as React from 'react';
import { Dialog, DialogType, DialogFooter } from '@fluentui/react/lib/Dialog';
import { PrimaryButton, DefaultButton } from '@fluentui/react/lib/Button';
import styles from './DialogWide.module.scss';

export const PureWideDialog: React.FC = () => {
  const [open, setOpen] = React.useState(false);

  return (
    <>
      <PrimaryButton text="Open popup" onClick={() => setOpen(true)} />
      <Dialog
        hidden={!open}
        onDismiss={() => setOpen(false)}
        className={styles.dialogScope}               {/* <-- this makes the overrides apply */}
        dialogContentProps={{
          type: DialogType.normal,
          title: 'Responsive popup',
          showCloseButton: true,
        }}
        modalProps={{
          isBlocking: false,
          // don't set width here; the CSS above (with !important) wins reliably
        }}
      >
        <div style={{ padding: '0 24px 8px', flex: '1 1 auto' }}>
          Try zooming or resizing â€” the dialog tracks the viewport, not 600px.
          <div style={{ height: 600 }} />
        </div>
        <DialogFooter>
          <DefaultButton onClick={() => setOpen(false)} text="Close" />
          <PrimaryButton onClick={() => alert('ok')} text="Action" />
        </DialogFooter>
      </Dialog>
    </>
  );
};
